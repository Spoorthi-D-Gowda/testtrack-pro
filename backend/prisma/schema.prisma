generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  role        String
  createdAt   DateTime   @default(now())
  resetExpiry DateTime?
  resetToken  String?
  bugs        Bug[]
  testCases   TestCase[]

  testCaseVersions TestCaseVersion[]
}

model TestCase {
  id Int @id @default(autoincrement())

  title       String
  description String

  module   String
  priority String
  severity String
  type     String
  status   String

  preconditions String
  testData      String
  environment   String

  steps    String
  expected String
  actual   String?

  version Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  versions TestCaseVersion[]
}

model TestCaseVersion {
  id         Int @id @default(autoincrement())
  testCaseId Int

  version Int
  summary String

  snapshot Json // old data stored

  editedById Int
  editedBy   User @relation(fields: [editedById], references: [id])

  createdAt DateTime @default(now())

  testCase TestCase @relation(fields: [testCaseId], references: [id])
}

model Bug {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  severity    String
  status      String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
