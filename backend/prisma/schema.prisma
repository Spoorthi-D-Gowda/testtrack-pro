generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  role        String
  createdAt   DateTime   @default(now())
  resetExpiry DateTime?
  resetToken  String?
  bugs        Bug[]
  testCases   TestCase[]
}

model TestCase {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  steps       String
  expected    String
  priority    String
  status      String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Bug {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  severity    String
  status      String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
