generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  role        String
  createdAt   DateTime   @default(now())
  resetExpiry DateTime?
  resetToken  String?
  bugs        Bug[]
  testCases   TestCase[]
  versions    TestCaseVersion[] 
  templates   TestCaseTemplate[]
  testSuites  TestSuite[]
  executions  TestExecution[]
  createdRuns TestRun[] @relation("CreatedRuns")
  assignments TestRunAssignment[]
}

model TestCase {
  id          Int      @id @default(autoincrement())

  testCaseId  String   @unique   // Auto ID (TC-2026-0001)

  title       String
  description String
  module      String
  expected    String   @default("")
  priority    String
  severity    String
  type        String
  status      String

  preconditions String
  postconditions String?
  cleanupSteps  String?

  testData    String
  environment String

  tags        String[] @default([])

  estimatedTime String?

  automationStatus String
  automationLink   String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  isDeleted   Boolean  @default(false)

  version     Int      @default(1)

  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  updatedById Int?

  steps       TestStep[]
  versions    TestCaseVersion[]
  attachments Attachment[]
  suites      SuiteTestCase[]
  executions  TestExecution[]
  runs        TestRunTestCase[]
}

model TestCaseVersion {
  id         Int @id @default(autoincrement())
  testCaseId Int

  version Int
  summary String

  snapshot Json // old data stored

  editedById Int
  editedBy   User @relation(fields: [editedById], references: [id])

  createdAt DateTime @default(now())

  testCase TestCase @relation(fields: [testCaseId], references: [id])
}

model TestStep {
  id         Int      @id @default(autoincrement())
  testCaseId Int

  stepNo     Int
  action     String
  testData   String?
  expected   String
  actual     String?
  status     String?
  notes      String?

  executedAt DateTime?

  testCase   TestCase @relation(fields: [testCaseId], references: [id])
  stepExecutions TestStepExecution[]
}
model TestCaseTemplate {
  id          Int      @id @default(autoincrement())

  name        String
  description String?

  module      String?

  templateData Json

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  createdAt   DateTime @default(now())
}
model Attachment {
  id          Int      @id @default(autoincrement())
  fileName    String
  filePath    String
  fileType    String
  uploadedAt  DateTime @default(now())

  testCaseId  Int
  testCase    TestCase @relation(fields: [testCaseId], references: [id])
}

model Bug {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  severity    String
  status      String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
 }
model TestSuite {
  id            Int      @id @default(autoincrement())
  name          String
  description   String?
  module        String?
  isArchived    Boolean  @default(false)

  parentId      Int?
  parent        TestSuite? @relation("SuiteHierarchy", fields: [parentId], references: [id])
  children      TestSuite[] @relation("SuiteHierarchy")

  createdAt     DateTime @default(now())

  createdById   Int
  createdBy     User     @relation(fields: [createdById], references: [id])

  testCases     SuiteTestCase[]
}

model SuiteTestCase {
  id         Int      @id @default(autoincrement())
  suiteId    Int
  testCaseId Int
  order      Int

  suite      TestSuite @relation(fields: [suiteId], references: [id])
  testCase   TestCase  @relation(fields: [testCaseId], references: [id])

  @@unique([suiteId, testCaseId])
}
model TestExecution {
  id            Int       @id @default(autoincrement())
  testCase      TestCase  @relation(fields: [testCaseId], references: [id])
  testCaseId    Int
  tester        User      @relation(fields: [testerId], references: [id])
  testerId      Int
  status        String    @default("In Progress")
  startedAt     DateTime  @default(now())
  completedAt   DateTime?
  totalTime     Int?      // store in seconds
  stepExecutions TestStepExecution[]
  testRun        TestRun? @relation(fields: [testRunId], references: [id])
  testRunId      Int?
}

model TestStepExecution {
  id           Int            @id @default(autoincrement())
  execution    TestExecution  @relation(fields: [executionId], references: [id])
  executionId  Int
  testStep     TestStep       @relation(fields: [testStepId], references: [id])
  testStepId   Int
  actual       String         @default("")
  status       String         @default("Pending")
  notes        String         @default("")
  evidences    ExecutionEvidence[]
}
model TestRun {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  status      String    @default("Planned")
  createdAt   DateTime  @default(now())

  createdBy   User      @relation("CreatedRuns", fields: [createdById], references: [id])
  createdById Int

  assignments TestRunAssignment[]
  executions  TestExecution[]
  testCases   TestRunTestCase[]
}

model TestRunAssignment {
  id        Int     @id @default(autoincrement())
  testRun   TestRun @relation(fields: [testRunId], references: [id])
  testRunId Int
  tester    User    @relation(fields: [testerId], references: [id])
  testerId  Int
}
model TestRunTestCase {
  id         Int      @id @default(autoincrement())
  testRun    TestRun  @relation(fields: [testRunId], references: [id])
  testRunId  Int
  testCase   TestCase @relation(fields: [testCaseId], references: [id])
  testCaseId Int
}
model ExecutionEvidence {
  id              Int      @id @default(autoincrement())
  fileName        String
  filePath        String
  fileType        String
  fileSize        Int
  uploadedAt      DateTime @default(now())

  stepExecutionId Int
  stepExecution   TestStepExecution @relation(fields: [stepExecutionId], references: [id], onDelete: Cascade)
}