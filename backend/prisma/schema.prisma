generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int                @id @default(autoincrement())
  name        String
  email       String             @unique
  password    String
  role        String
  createdAt   DateTime           @default(now())
  resetExpiry DateTime?
  resetToken  String?
  bugs        Bug[]
  testCases   TestCase[]
  templates   TestCaseTemplate[]
  versions    TestCaseVersion[]
}

model TestCase {
  id               Int               @id @default(autoincrement())
  title            String
  description      String
  expected         String            @default("")
  priority         String
  status           String
  createdAt        DateTime          @default(now())
  userId           Int
  environment      String
  module           String
  preconditions    String
  severity         String
  testData         String
  type             String
  updatedAt        DateTime          @updatedAt
  version          Int               @default(1)
  automationLink   String?
  automationStatus String
  cleanupSteps     String?
  estimatedTime    String?
  isDeleted        Boolean           @default(false)
  postconditions   String?
  tags             String[]          @default([])
  testCaseId       String            @unique
  updatedById      Int?
  user             User              @relation(fields: [userId], references: [id])
  versions         TestCaseVersion[]
  steps            TestStep[]
  attachments      Attachment[]
}

model TestCaseVersion {
  id         Int      @id @default(autoincrement())
  testCaseId Int
  version    Int
  summary    String
  snapshot   Json
  editedById Int
  createdAt  DateTime @default(now())
  editedBy   User     @relation(fields: [editedById], references: [id])
  testCase   TestCase @relation(fields: [testCaseId], references: [id])
}

model TestStep {
  id         Int       @id @default(autoincrement())
  testCaseId Int
  stepNo     Int
  action     String
  testData   String?
  expected   String
  actual     String?
  status     String?
  notes      String?
  executedAt DateTime?
  testCase   TestCase  @relation(fields: [testCaseId], references: [id])
}

model TestCaseTemplate {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  module       String?
  templateData Json
  createdById  Int
  createdAt    DateTime @default(now())
  createdBy    User     @relation(fields: [createdById], references: [id])
}

model Bug {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  severity    String
  status      String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Attachment {
  id         Int      @id @default(autoincrement())
  fileName   String
  filePath   String
  fileType   String
  uploadedAt DateTime @default(now())
  testCaseId Int
  TestCase   TestCase @relation(fields: [testCaseId], references: [id])
}
