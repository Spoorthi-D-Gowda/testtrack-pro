generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  role        String
  createdAt   DateTime   @default(now())
  resetExpiry DateTime?
  resetToken  String?
  bugs        Bug[]
  testCases   TestCase[]
   versions   TestCaseVersion[] 
}

model TestCase {
  id          Int      @id @default(autoincrement())

  testCaseId  String   @unique   // Auto ID (TC-2026-0001)

  title       String
  description String
  module      String
  expected    String   @default("")
  priority    String
  severity    String
  type        String
  status      String

  preconditions String
  postconditions String?
  cleanupSteps  String?

  testData    String
  environment String

  tags        String[] @default([])

  estimatedTime String?

  automationStatus String
  automationLink   String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  isDeleted   Boolean  @default(false)

  version     Int      @default(1)

  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  steps       TestStep[]
  versions    TestCaseVersion[]
}

model TestCaseVersion {
  id         Int @id @default(autoincrement())
  testCaseId Int

  version Int
  summary String

  snapshot Json // old data stored

  editedById Int
  editedBy   User @relation(fields: [editedById], references: [id])

  createdAt DateTime @default(now())

  testCase TestCase @relation(fields: [testCaseId], references: [id])
}

model TestStep {
  id         Int      @id @default(autoincrement())
  testCaseId Int

  stepNo     Int
  action     String
  testData   String?
  expected   String
  actual     String?
  status     String?
  notes      String?

  testCase   TestCase @relation(fields: [testCaseId], references: [id])
}


model Bug {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  severity    String
  status      String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
